{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Luma",
  "scopeName": "source.luma",
  "patterns": [
    { "include": "#comments" },
    { "include": "#directives" },
    { "include": "#interpolations" },
    { "include": "#strings" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.luma",
          "match": "@#.*$"
        },
        {
          "name": "comment.block.luma",
          "begin": "@comment",
          "end": "@end",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.begin.luma" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.comment.end.luma" }
          }
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "meta.directive.control.luma",
          "begin": "@(if|elif|else|for|while)\\b",
          "end": "$|(?=@end)",
          "beginCaptures": {
            "1": { "name": "keyword.control.luma" }
          },
          "patterns": [
            { "include": "#expressions" }
          ]
        },
        {
          "name": "meta.directive.definition.luma",
          "begin": "@(macro|block|let|call)\\b",
          "end": "$|(?=@end)",
          "beginCaptures": {
            "1": { "name": "keyword.other.luma" }
          },
          "patterns": [
            {
              "name": "entity.name.function.luma",
              "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
            },
            { "include": "#expressions" }
          ]
        },
        {
          "name": "meta.directive.import.luma",
          "begin": "@(import|from|extends|include)\\b",
          "end": "$",
          "beginCaptures": {
            "1": { "name": "keyword.control.import.luma" }
          },
          "patterns": [
            { "include": "#strings" }
          ]
        },
        {
          "name": "keyword.control.flow.luma",
          "match": "@(break|continue|do|end)\\b"
        },
        {
          "name": "keyword.other.luma",
          "match": "@(autoescape|filter|raw)\\b"
        }
      ]
    },
    "interpolations": {
      "patterns": [
        {
          "name": "meta.interpolation.complex.luma",
          "begin": "\\$\\{",
          "end": "\\}",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.template-expression.begin.luma" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.template-expression.end.luma" }
          },
          "patterns": [
            { "include": "#expressions" }
          ]
        },
        {
          "name": "meta.interpolation.simple.luma",
          "match": "\\$([a-zA-Z_][a-zA-Z0-9_]*(\\.[a-zA-Z_][a-zA-Z0-9_]*|\\[[^\\]]+\\])*)",
          "captures": {
            "0": { "name": "variable.other.luma" },
            "1": { "name": "variable.other.property.luma" }
          }
        }
      ]
    },
    "expressions": {
      "patterns": [
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#operators" },
        { "include": "#filters" },
        { "include": "#functions" },
        { "include": "#variables" },
        { "include": "#keywords" }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.luma",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.luma",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.luma",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.luma",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.luma",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.luma",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.luma",
          "match": "\\b(and|or|not|in)\\b"
        },
        {
          "name": "keyword.operator.comparison.luma",
          "match": "(==|!=|<|>|<=|>=)"
        },
        {
          "name": "keyword.operator.arithmetic.luma",
          "match": "(\\+|\\-|\\*|\\/|%|//)"
        },
        {
          "name": "keyword.operator.assignment.luma",
          "match": "="
        }
      ]
    },
    "filters": {
      "patterns": [
        {
          "name": "meta.filter.luma",
          "match": "\\|\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "entity.name.function.filter.luma" }
          }
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function-call.luma",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "entity.name.function.luma" }
          }
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.luma",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "constant.language.luma",
          "match": "\\b(true|false|nil|none|null)\\b"
        }
      ]
    }
  }
}
