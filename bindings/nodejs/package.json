{
  "name": "@luma/templates",
  "version": "0.1.0-rc.2",
  "description": "Luma template engine for Node.js - Fast, clean templating with Jinja2 compatibility",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "template",
    "templating",
    "jinja2",
    "luma",
    "lua",
    "kubernetes",
    "helm",
    "devops"
  ],
  "author": "Luma Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/santosr2/luma.git",
    "directory": "bindings/nodejs"
  },
  "bugs": {
    "url": "https://github.com/santosr2/luma/issues"
  },
  "homepage": "https://github.com/santosr2/luma#readme",
  "files": [
    "dist",
    "lua",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "fengari": "^0.1.4",
    "fengari-interop": "^0.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
