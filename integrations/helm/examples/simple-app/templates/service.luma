apiVersion: v1
kind: Service
metadata:
  name: ${Release.Name}-${Chart.Name}
  labels:
    app: $Chart.Name
    release: $Release.Name
spec:
  type: ${Values.service.type | default("ClusterIP")}
  ports:
    - port: $Values.service.port
      targetPort: http
      protocol: TCP
      name: http
  selector:
    app: $Chart.Name
    release: $Release.Name
